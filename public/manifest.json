{
  "manifest_version": 3,
  "name": "SyncGrid",
  "version": "1.1.0",
  "description": "Secure, synced bookmark dashboard for new tabs â€” Speed Dial UI with cloud backup via local folder sync",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "favicon"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'none'; form-action 'none'"
  }
}
